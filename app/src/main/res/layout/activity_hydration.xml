<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hydration"
    android:background="@drawable/back">

    <Button
        android:id="@+id/on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="183dp"
        android:layout_marginBottom="54dp"
        android:onClick="on"
        android:text="Hydration Timer On"
        app:layout_constraintBottom_toTopOf="@+id/off"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:onClick="off"
        android:text="Hydration Timer Off"
        app:layout_constraintBottom_toTopOf="@+id/onoff"
        app:layout_constraintStart_toStartOf="@+id/on"
        app:layout_constraintTop_toBottomOf="@+id/on" />

    <TextView
        android:id="@+id/onoff"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="250dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/off" />
</android.support.constraint.ConstraintLayout>